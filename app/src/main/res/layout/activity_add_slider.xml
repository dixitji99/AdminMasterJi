<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shades_of_grey"
    tools:context=".AddSlider">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading_add_slider"
        android:text="Slider Information"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        android:fontFamily="@font/normal"
        android:background="@drawable/morning_salad"
        android:gravity="center"
        android:elevation="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"

        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textColor="#15CCCC"
                android:textStyle="bold"
                android:fontFamily="@font/normal"
                android:textSize="@dimen/_20sdp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slider_title"
                android:layout_marginLeft="@dimen/_5sdp"
                android:singleLine="true"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/saladcolor1"
                android:textColorHint="#675A5A"
                android:fontFamily="sans-serif-condensed"
                android:background="@drawable/round_white"
                android:padding="@dimen/_5sdp"
                android:textStyle="normal"
                android:hint="eg.best deals.."
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/add_slider2"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="9dp"
            android:elevation="15dp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingLeft="@dimen/_3sdp"
            app:cardBackgroundColor="@color/saladcolor1"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/ic_upload_icon1_0"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Slider"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>